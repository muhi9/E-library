{% extends 'base.html.twig' %}

{% block title %}{{title|default()|trans }}{% endblock %}

{% block body %}

<div id="col" class="col-9" style="margin-bottom: 10rem">
    <div class="container" style="padding: 1rem">
        {{ form_start(form,{attr: {novalidate:'novalidate'}})}}
        <div class="row">
            <div class="col">
                {{ form_row(form.title) }}
            </div>
            <div class="col">
                {{ form_row(form.author) }}
            </div>
            <div class="col">
                {{ form_row(form.releaseYear, { 'attr': {'placeholder': 'YYYY'|trans, 'pattern':'[0-9]{4}' }}) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.price, { 'attr': {'placeholder': '0.00'|trans}}) }}
            </div>
            <div class="col">
                {{ form_row(form.publishingHouse) }}
            </div>
        </div>

        <div class="row">

            <div class="col">
                {{ form_row(form.isFree) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.categories) }}
            </div>
            <div class="col-8">
                {{ form_row(form.description) }}
            </div>
        </div>
        <hr>
        {% if 'ROLE_TEACHER' not in app.user.getRoles[0] %}
        <div class="row">
            <div class="col">
                {{ form_row(form.validation) }}
            </div>
            <div class="col-8">
                {{ form_row(form.isPublish) }}
            </div>
        </div>
        <hr>
        {% endif %}

        <div class="row">
            <div class="col">
                {{ form_row(form.cover) }}

            </div>
            <div class="col">
                {{ form_row(form.book) }}

            </div>
        </div>
        <div class="col save">
            {{ form_widget(form.save) }}
        </div>

        {{ form_row(form._token) }}
        {{ form_end(form) }}
    </div>
</div>

<script>
    ClassicEditor
        .create(document.getElementById('book_description'))
        .catch(error => {
            console.error(error);
        });
</script>
<style>
    #col {
        background-color: #eeeeee;
        margin-left: 7rem;
    }

    .save {
        text-align-last: right
    }
</style>

{% endblock body %}
<link href="{{ asset('css/searchBox.css') }}" type="text/css" rel="stylesheet" />

<form  method="get">
  <div class="search-box">
      <button id="btnSbmt" class="btn-search"><i class="fas fa-search"></i></button>
      <input type="text" name="userName" class="input-search"  value="{{filter|default('')}}" placeholder="Type to Search...">
  </div>
  <br>
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Fak Number</th>
      <th scope="col">Is Verified</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for user in data %}
    <tr>
      <th scope="row">{{user.id}}</th>
      <td>{{user.firstName}}</td>
      <td>{{user.lastName}}</td>
      <td>{{user.email}}</td>
      <td>{{user.phone}}</td>
      <td>{{user.fakNo}}</td>
      <td>{{user.isVerified}}</td>
      <td>
        <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pencil"></i></a>
        <a href="{{ path('user_delete', {'id': user.id}) }}"><i class="fa-regular fa-circle-xmark"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<script>
  let url = window.location.href.split('?')[1].split('=')[1];
if (url.length > 0) {
    document.querySelector('.input-search').focus()
}
</script>
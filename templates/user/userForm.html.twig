{% extends 'base.html.twig' %}


{% block title %}{{title|default()|trans }}{% endblock %}


{% block body %}
<link href="{{ asset('css/userForm.css') }}" type="text/css" rel="stylesheet" />


<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
                {{ form_start(form, {'attr': {'class': 'form-card'}}) }}

                <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">First name</label>
                        {{ form_widget(form.firstName, { 'attr': {'placeholder': 'Enter your first name'|trans} })}}
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Last name</label>
                        {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Enter your last name'|trans} })}}
                    </div>
                </div>

                <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Email</label>
                        {{ form_widget(form.email, { 'attr': {'placeholder': 'Enter your email'|trans, 
                        'pattern':"[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" } })}}
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Phone number</label>
                        {{ form_widget(form.phone, { 'attr': {'placeholder': 'Enter your phone number'|trans,  'pattern':"[0-9]*" }})}}
                    </div>
                </div>

                <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Faculty No</label>
                        {{ form_widget(form.fakNo, { 'attr': {'placeholder': 'Enter your faculty number'|trans, 'pattern':"\d*"} })}}
                    </div>

                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Password</label>
                        {{ form_widget(form.password)}}
                    </div>

                    {% if 'ROLE_ADMIN' in app.user.getRoles[0] %}
                    <hr style="margin: 1rem">

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label class="form-control-label px-3">Role</label>
                            {{ form_widget(form.roles)}}
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex chek">
                            <label class="form-control-label px-3"></label>
                            {{ form_widget(form.isVerified)}}

                            {# <input type="text" id="mob" name="mob" placeholder="" onblur="validate(4)"> #}
                        </div>
                    </div>
                    {% endif %}

                    <div class="row justify-content-end" style="text-align: right;">
                        <div class="form-group col-sm-6">
                            {{ form_widget(form.save, { 'attr': {'class': 'btn-block btn-primary'} })}}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    {% endblock body %}
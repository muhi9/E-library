{% extends 'base.html.twig' %}

{% block title %}E-lybrary | Register{% endblock %}
{% block stylesheets %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link href="{{ asset('css/register.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}

<form method="post" id="registerForm">
    {% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ form_start(registrationForm)}}

    <body>
        <div class="container d-flex justify-content-center align-items-center min-vh-100">
            <!----------------------- Login Container -------------------------->
            <div id="box" class="row border rounded-5 p-3 bg-white shadow box-area">
                <!--------------------------- Left Box ----------------------------->

                <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box">
                    <div class="header-text mb-4">
                        <h2>Hello !</h2>
                        <p>We are glad you are joining us.</p>
                    </div>

                    <div class="featured-image mb-3">
                        <img src="https://static.vecteezy.com/system/resources/previews/005/925/073/large_2x/knowledge-or-education-as-intelligence-mind-experience-tiny-person-concept-vector.jpg"
                            class="img-fluid">
                    </div>

                </div>
                <!-------------------- ------ Right Box ---------------------------->
                <div class=" col-md-6 right-box">
                    <div class="row align-items-center">
                        <div class="form-group">
                            <div class="form-wrapper">
                                {{form_widget(registrationForm.firstName)}}
                            </div>
                            <div class="form-wrapper">
                                {{form_widget(registrationForm.lastName)}}
                            </div>
                        </div>
                        <div class="">
                            <div class="form-group">
                                <div class="form-wrapper">
                                    <label class="form-control-lg bg fs-6">You are</label>
                                </div>
                                <div class="form-wrapper">
                                    {{form_widget(registrationForm.typeUser)}}

                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            {{form_widget(registrationForm.email)}}
                        </div>
                        <div id="emailErr" style="display: none; color: red;">Invalid email</div>
                        <div class="input-group mb-3">
                            {{form_widget(registrationForm.phone)}}
                        </div>
                        <div class="form-group">
                            <div class="form-wrapper">
                                {{form_widget(registrationForm.plainPassword)}}
                                {{ form_errors(registrationForm.plainPassword) }}

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="form-wrapper">
                                {{form_widget(registrationForm.repeatPassword)}}
                                {{ form_errors(registrationForm.repeatPassword) }}
                            </div>
                        </div>
                        <div id="passwordMatchError" style="display: none; color: red;">Passwords do not match
                        </div>
                        <div class="input-group mb-1">
                            {{form_widget(registrationForm.agreeTerms)}}
                        </div>
                        <div class="input-group mb-3 d-flex justify-content-between">
                        </div>
                        {{form_widget(registrationForm.signup)}}
                        <div class="input-group mb-3">
                        </div>
                        <div class="row">
                            <small>You have account? <a href="{{ path('login') }}"> Login</a></small>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </body>
    {{ form_end(registrationForm)}}

    {% endblock %}

    {% block javascripts %}

    <script src="{{ asset('js/registerForm.js') }}"></script>
    {% endblock %}